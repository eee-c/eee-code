= categories(@recipes)

- date = Date.parse(@meal['date'])
.breadcrumbs
  = breadcrumbs(date, :day)

%h1
  = @meal['title']

%div.navigation
  &lsaquo;
  =link_to_adjacent_view_date(@meal['date'], @meals_by_date, :previous => true) { |d,v| Date.parse(d).strftime("#{v['title']} (%B %e, %Y)") }
  |
  =link_to_adjacent_view_date(@meal['date'], @meals_by_date) { |d,v| Date.parse(d).strftime("#{v['title']} (%B %e, %Y)") }
  &rsaquo;

#summary
  = image_link @meal
  = wiki @meal['summary']

%ul#menu
  - @meal['menu'].each do |menu_item|
    %li= wiki(menu_item)

#description
  = wiki @meal['description']

%div
  %a{:href => "/feedback?url=#{Rack::Utils.escape(@url)}&subject=#{Rack::Utils.escape("[Meal] " + @meal['title'])}"} Send us feedback on this meal
