%table
  %tr
    %th
      %a{:href => "/recipes/search?q=foo&sort=sort_title", :id => "sort-by-name"} Name
    %th= "Date"
  - @results['rows'].each_with_index do |result, i|
    %tr{:class => "row#{i % 2}"}
      %td
        %a{:href => "/recipes/#{result['_id']}"}= result['title']
      %td= result['date']

= pagination(@query, @results)
